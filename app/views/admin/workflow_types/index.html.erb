<div class="page-header">
  <span class="section-title"> 工作流程 </span>
  <%= link_to '添加新分类', new_admin_section_category_path(@section), :remote => true, :class => 'btn pull-right btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @workflow_types.each do |work| %>
      <tr id="category_<%= work.id %>">
        <td><%= link_to work.name, admin_category_workflows_path(work) %></td>
        <td><%= work.created_at.strftime('%y/%m/%d')  %></td>
        <td>
          <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_section_category_path(:section_id => work.section_id, :id => work.id ), :remote => true  %>
          <%= link_to '<i class="icon-trash"></i>'.html_safe, admin_section_category_path(:section_id => work.section_id, :id => work.id), :method => :delete, :remote => true, :confirm => 'Are you sure?'  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="page-header">
  <span class="section-title">
    工作流程
  </span>
  <%= link_to '添加新分类', new_admin_section_category_path(@section), :remote => true, :class => 'btn pull-right btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @workflow_types.each do |work| %>
      <tr id="category_<%= work.id %>">
        <td><%= work.id %></td>
        <td><%= link_to work.name, admin_category_workflows_path(work) %></td>
        <td><%= work.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_section_category_path(:section_id => work.section_id, :id => work.id ), :remote => true, :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_section_category_path(:section_id => work.section_id, :id => work.id), :method => :delete, :remote => true, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_for [:admin,@news], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>教务通知</legend>

    <div class="control-group">
      <%= f.label "标题", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "内容", :class => 'control-label' %>
      <div class="controls">
        <%= f.kindeditor :content,:width => 700, :height => 300, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
        <%= f.hidden_field :author, :value => "#{current_user.name}", :class => 'text_field' %>
    </div>

    <div class="control-group">
        <%= f.hidden_field :department, :value => "#{current_user.department}", :class => 'text_field' %>
    </div>

    <div class="control-group">
      <%= f.label "是否发布", :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :show, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_news_index_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

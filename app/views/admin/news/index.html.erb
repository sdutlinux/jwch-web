<h1>教务通知</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>创建于</th>
      <th>作者</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.id %></td>
        <td><%= link_to news.title, admin_news_path(news) %></td>
        <td><%= news.created_at %></td>
        <td><%= news.author %></td>
        <td>
          <%= link_to '编辑', edit_admin_news_path(news), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_news_path(news), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '发布', new_admin_news_path, :class => 'btn btn-primary' %>
<p><%= will_paginate @news %></p>

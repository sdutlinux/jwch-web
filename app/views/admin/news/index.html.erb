<h1>News</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.id %></td>
        <td><%= link_to news.title, admin_news_path(news) %></td>
        <td><%= news.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_admin_news_path(news), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', news_path(news), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New', new_admin_news_path, :class => 'btn ' %>


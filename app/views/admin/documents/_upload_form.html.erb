<%= form_for :document,  :html => {:multipart => true} do |f|%>
  <%= f.hidden_field :author, :value => "#{current_user.name}"%>
  <%= f.file_field :upload_file, :size => 20%>
  分类:<%= f.select :category_id, Document.categories.collect {|c| [c.name, c.id ] }  %>
  <%= f.submit "上传", :class => "btn btn-primary"%>
<% end %>

<%= form_for :document, :url => {:action => "upload"}, :html => {:multipart => true} do |f|%>
  <%= f.hidden_field :author, :value => "#{current_user.name}"%>
  <%= f.file_field :upload_file, :size => 20%>
  分类:<%= f.select :category, options_for_select(category())%>
  <%= f.submit "上传", :class => "btn btn-primary"%>
<% end %>

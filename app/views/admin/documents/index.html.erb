
<%= form_for :document, :url => {:action => "upload"},
  :html => {:multipart => true} do |f|%>
    <%= f.hidden_field :author, :value => "#{current_user.name}"%>
  <%= f.file_field :upload_file, :size => 20%>
  <!--category:<%= f.text_field  :category%>-->
  分类:<%= f.select :category, options_for_select([
           ['学业学籍','学业学籍'],['教学研究',' 教学研究'],['实践教学','实践教学'],
           ['选课中心','选课中心'],['教材','教材'],['考务','考务'],['实验教学','实验教学'],
           ['教学简讯','教学简讯'],[' 通知附件',' 通知附件'],[' 质量管理',' 质量管理'],
           ['其他','其他'],['教学评估','教学评估']
  ])%>
  <%= f.submit "上传", :class => "btn btn-primary"%>

<% end %>

<h3>所有文件</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>user</th>
      <th>category</th>
      <th>time</th>
       <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.id %></td>
        <td><%= link_to document.name,admin_download_file_path(document)%></td>
        <td><%= document.author %></td>
        <td><%= document.category %></td>
        <td><%= document.created_at %></td>
         <td>
          <%= link_to 'Destroy', admin_delete_file_path(document), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


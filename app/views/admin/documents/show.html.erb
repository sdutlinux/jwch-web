<h1>/Document</h1>

<p>
  <b>Name</b><br>
  <%= @document.name %>
</p>

<p>
  <b>Path</b><br>
  <%= @document.path %>
</p>

<p>
  <b>Author</b><br>
  <%= @document.author %>
</p>

<p>
  <b>Category</b><br>
  <%= @document.category %>
</p>

<p>
  <b>Content type</b><br>
  <%= @document.content_type %>
</p>

<div class="form-actions">
  <%= link_to 'Back', document_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_document_path(@document), :class => 'btn' %>
  <%= link_to 'Delete', document_path(@document), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

<div class="page-header">
  <span class="section-title"> 所有学院 </span>
  <%= link_to '添加新分类', new_admin_section_category_path(@section), :remote => true, :class => 'btn pull-right' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @course_types.each do |course_type| %>
      <tr id="category_<%= course_type.id %>">
        <td><%= link_to course_type.name, admin_category_courses_path(course_type) %></td>
        <td><%= course_type.created_at.strftime('%y/%m/%d') %></td>
        <td>
          <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_section_category_path(:section_id => course_type.section_id, :id => course_type.id ), :remote => true  %>
          <%= link_to '<i class="icon-trash"></i>'.html_safe, admin_section_category_path(:section_id => course_type.section_id, :id => course_type.id), :method => :delete, :remote => true, :confirm => 'Are you sure?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= will_paginate @course_types, :renderer => BootstrapPagination::Rails %></p>

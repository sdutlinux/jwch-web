<%= form_for [:admin,@course_type], :url => admin_course_types_path, :html => { :class => 'form-horizontal' } do |type| %>
  <fieldset>
    <legend>分类</legend>

    <div class="control-group">
      <%= type.label "分类名:", :class => 'control-label' %>
      <div class="controls">
        <%= type.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= type.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_course_types_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


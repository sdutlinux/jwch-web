<% if flash[:notice] %>
  <div class="alert alert-success">
      <%= flash[:notice] %>
      <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<p>
  <b>链接</b><br>
  <%= @link.name %>
</p>

<p>
  <b>排序</b><br>
  <%= @link.sort %>
</p>

<p>
  <b>地址</b><br>
  <%= link_to  @link.url, @link.url %>
</p>

<p>
  <b>字体颜色</b><br>
  <%= @link.color %>
</p>

<p>
  <b>是否显示</b><br>
  <%= @link.show == true ? '显示' : '隐藏' %>
</p>

<div class="form-actions">
  <%= link_to '返回', admin_links_path, :class => 'btn'  %>
  <%= link_to '编辑', edit_admin_link_path(@link), :class => 'btn' %>
  <%= link_to '删除', admin_link_path(@link), :method => 'delete', :confirm => '确认?', :class => 'btn btn-danger' %>
</div>

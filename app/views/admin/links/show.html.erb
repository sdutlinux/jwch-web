<p>
  <b>链接</b><br>
  <%= @link.name %>
</p>

<p>
  <b>排序</b><br>
  <%= @link.sort %>
</p>

<p>
  <b>地址</b><br>
  <%= @link.url %>
</p>

<div class="form-actions">
  <%= link_to 'Back', admin_links_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_admin_link_path(@link), :class => 'btn' %>
  <%= link_to 'Delete', admin_link_path(@link), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

<div class="page-header">
  <span class="section-title"> 相关链接 </span>
  <%= link_to "添加", new_admin_link_path(), :class => 'btn pull-right'%>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>链接</th>
      <th>链接地址</th>
      <th>权重</th>
      <th>字体颜色</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.name %></td>
        <td><%= link.url %></td>
        <td><%= link.sort %></td>
        <td><%= link.color %></td>
        <td>
          <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_link_path(link) %>
          <%= link_to '<i class="icon-trash"></i>'.html_safe, admin_link_path(link), :method => :delete, :confirm => '确定?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_for [:admin,@link], :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label "链接名", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "排序", :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :sort, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "链接地址", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :url, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "字体颜色", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :color, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_links_path, :class => 'btn' %>
    </div>
<% end %>

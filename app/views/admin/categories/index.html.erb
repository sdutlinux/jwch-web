<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>频道</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= link_to category.name, admin_category_workflows_path(category) %></td>
        <td><%= category.channel_name %></td>
        <td><%= category.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_category_path(category), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_category_path(category), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '添加新分类', new_admin_category_path(:channel_name => params[:channel_name]), :class => 'btn btn-primary' %>

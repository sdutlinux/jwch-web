<%= form_for [:admin,@category], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>分类</legend>

    <div class="control-group">
      <%= f.label "分类名:", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_section_category_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


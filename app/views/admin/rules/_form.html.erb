<%= form_for [:admin,@rule_type,@rule], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>规章制度</legend>

    <div class="control-group">
      <%= f.label '标题', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label '内容', :class => 'control-label' %>
      <div class="controls">
        <%= f.kindeditor :content, :width => 700,:height => 400, :class => 'number_field' %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_rule_type_rules_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

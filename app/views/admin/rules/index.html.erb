<% if flash[:notice] %>
  <div class="alert alert-success">
      <%= flash[:notice] %>
      <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<div class="page-header">
  <span class="section-title">
      规章制度
  </span>
    <%= link_to '新条目', new_admin_category_rule_path, :class => 'btn pull-right' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.id %></td>
        <td><%= link_to rule.title, admin_category_rule_path(@rule_type,rule) %></td>
        <td><%= rule.created_at.strftime('%y/%m/%d')  %></td>
        <td>
          <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_category_rule_path(@rule_type,rule) %>
          <%= link_to '<i class="icon-trash"></i>'.html_safe, admin_category_rule_path(@rule_type,rule), :method => :delete, :confirm => 'Are you sure?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><%= will_paginate @rules, :renderer => BootstrapPagination::Rails %></p>


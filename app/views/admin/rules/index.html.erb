<% if flash[:notice] %>
  <div class="alert alert-success">
      <%= flash[:notice] %>
      <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<h1>规章制度</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.id %></td>
        <td><%= link_to rule.title, admin_category_rule_path(@rule_type,rule) %></td>
        <td><%= rule.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_category_rule_path(@rule_type,rule), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_category_rule_path(@rule_type,rule), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新条目', new_admin_category_rule_path, :class => 'btn btn-primary' %>

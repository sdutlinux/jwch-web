<h1>用户</h1>

<p>
  <b>姓名</b><br>
  <%= @user.name %>
</p>

<p>
  <b>部门</b><br>
  <%= @user.department %>
</p>

<p>
  <b>管理员权限</b><br>
  <%if @user.admin %>
    <span>管理员</span>
  <%else%>
    <span> 不是管理员</span>
  <%end%>
</p>


<div class="form-actions">
  <%= link_to '返回', admin_users_path, :class => 'btn'  %>
  <%= link_to '编辑', edit_admin_user_path(@user), :class => 'btn' %>
  <%= link_to '删除', admin_user_path(@user), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

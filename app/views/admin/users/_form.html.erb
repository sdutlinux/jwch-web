<div class="row">
  <div class="span6">
<%= form_for [:admin, @user], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>

    <div class="control-group">
      <%= f.label '姓名', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label '密码', :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label '确认密码', :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label '部门', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :department, :class => 'text_field' %>
      </div>
    </div>
    <% if is_admin?  %>
    <div class="control-group">
      <%= f.label '管理员权限', :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :admin, :class => 'check_box' %>
      </div>
    </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
</div>
</div>

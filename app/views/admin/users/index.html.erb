<h1>用户管理</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th> 序号</th>
      <th> 姓名 </th>
      <th> 创建于</th>
      <th> 动作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_user_path(user), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '添加', new_admin_user_path, :class => 'btn btn-primary'%>

<div class="page-header">
<span class="section-title"> 创新竞赛 </span>
<%= link_to '添加新分类', new_admin_section_category_path(@section), :remote => true, :class => 'btn pull-right' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @competition_types.each do |t| %>
      <tr id="category_<%= t.id %>">
        <td><%= t.id %></td>
        <td><%= link_to t.name, admin_category_competitions_path(t)%></td>
        <td><%= t.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_section_category_path(@section, t), :remote =>true, :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_section_category_path(@section, t), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger', :remote => true  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @competition_types, :renderer => BootstrapPagination::Rails  %></p>

<h1>创新竞赛</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @competition_types.each do |t| %>
      <tr id="category_<%= t.id %>">
        <td><%= t.id %></td>
        <td><%= link_to t.name, admin_category_competitions_path(t)%></td>
        <td><%= t.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_category_path(t), :remote =>true, :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_category_path(t), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger', :remote => true  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '添加新分类', new_admin_category_path, :remote => true, :class => 'btn btn-primary' %>
<p><%= will_paginate @competition_types  %></p>

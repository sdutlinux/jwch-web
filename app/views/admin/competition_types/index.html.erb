<h1>创新竞赛</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @competition_types.each do |t| %>
      <tr>
        <td><%= t.id %></td>
        <td><%= link_to t.name, admin_competition_types_path%></td>
        <td><%= t.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_competition_type_path(t), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_competition_type_path(t), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '添加新分类', new_admin_competition_type_path, :class => 'btn btn-primary' %>

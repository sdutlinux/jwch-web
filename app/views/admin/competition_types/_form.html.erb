<%= form_for [:admin,@competition_type], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @competition_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= @competition_type.errors.count %>错误，不能保存：</h2>
      <ul>
      <% @competition_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend> 奖项类型</legend>

    <div class="control-group">
      <%= f.label "标题", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_competition_types_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

<%= form_for [:admin,@teaching_achievement], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Teaching Achievement</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :year, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :year, :order => [:year], :start_year => 2004, :class => 'date_select' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :department, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :department, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :team, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :team, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :rank, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :rank, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_teaching_achievements_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

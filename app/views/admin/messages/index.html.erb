<h1>教学简讯</h1>
<table class="table table-striped" id="message_type">
  <thead>
    <tr>
      <th>简讯栏目</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr id="<%= dom_id message %>">
        <td> <i class="icon-tags"></i> <%= mesage_type_name(message.message_type_id) %></td>
        <td>
          <%= link_to ' 添加文章',new_admin_message_path(:channel_id => "#{params[:channel_id]}",:message_type_id =>message.message_type_id), :class => 'btn btn-mini' %>
        </td>
      </tr>
      <tr>
        <td>&nbsp; &nbsp; <i class="icon-book"></i><%=link_to message.title, edit_admin_message_path(message) %></td>
        <td>
          <%= link_to '删除', admin_message_path(message), :method => :delete, :confirm => '确定删除?', :class => 'btn btn-mini btn-danger' %>
        <td/>
      </tr>
    <% end %>
  </tbody>
</table>

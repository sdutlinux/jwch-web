<div class="page-header">
  <span class="section-title"> <%= "第#{@message_channel.number}期" %></span>
  <%= link_to "添加简讯", new_admin_message_channel_message_path(@message_channel), :class => 'btn pull-right'%>
</div>

<div class="accordion" id="accordion<%= @message_channel.id %>">
  <% @message_type.each do |t| %>
  <div class="accordion-group">
    <div class="accordion-heading">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion<%= @message_channel.id %>" href="#collapse-<%= "#{t.id}"%>">
        <%= t.name %>
      </a>
      <%= link_to "删除" ,admin_message_channel_message_type_path(@message_channel,t), :method => :delete,  :class => "btn btn-mini btn-danger pull-right" %>
    </div> 
    <div id="collapse-<%= "#{t.id}"%>" class="accordion-body collapse">
      <div class="accordion-inner">
        <table class="table table-striped">
          <tbody>
            <% t.messages.each do |message| %>
            <tr>
              <td><%= link_to message.title, admin_message_channel_message_path(@message_channel, message) %></td>
              <td>
                <%= link_to '编辑', edit_admin_message_channel_message_path(@message_channel, message), :class => 'btn btn-mini' %>
                <%= link_to '删除', admin_message_channel_message_path(@message_channel, message), :method => :delete, :confirm => '确定删除?', :class => 'btn btn-mini btn-danger' %>
                <td/>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% end %>
  </div>

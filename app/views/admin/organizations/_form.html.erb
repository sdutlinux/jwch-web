<%= form_for [:admin,@organization], :html => { :class => 'form-horizontal' } do |organization| %>

  <fieldset>
    <legend>组织机构</legend>

    <div class="control-group">
      <%= organization.label "标题", :class => 'control-label' %>
      <div class="controls">
        <%= organization.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= organization.label "内容", :class => 'control-label' %>
      <div class="controls">
        <%= organization.kindeditor  :responsibility,:width => 700,:height => 400,  :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
        <%= organization.hidden_field :author, :value => "#{current_user.name}", :class => 'text_field' %>
    </div>

    <div class="control-group">
        <%= organization.hidden_field :category_id, :value => "#{params[:category_id]}", :class => 'text_field' %>
    </div>

    <div class="control-group">
      <%= organization.label "是否发布", :class => 'control-label' %>
      <div class="controls">
        <%= organization.check_box :show, :class => 'check_box' %>
      </div>
    </div>

    <div class="form-actions">
      <%= organization.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_organizations_path, :class => 'btn' %>
    </div>
  </fieldset>

<% end %>


<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
    <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<div class="page-header">
  <span class="section-title">
    组织机构 
  </span>
  <%= link_to "添加", new_admin_organization_path(),  :class => 'btn pull-right'%>
</div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>标题</th>
        <th>分类</th>
        <th>作者</th>
        <th>动作</th>
      </tr>
    </thead>
    <tbody>
      <% @organizations.each do |p| %>
        <tr>
          <td><%= link_to p.name, admin_organization_path(p) %></td>
          <td><%= category_name p.category_id %></td>
          <td><%= p.author %></td>
          <td>
            <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_organization_path(p)  %>
            <%= link_to '<i class="icon-trash"></i>'.html_safe, admin_organization_path(p), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<p><%= will_paginate @organizations, :renderer => BootstrapPagination::Rails %></p>

<h3>机构设置</h3>
<br>
<h4>成员简介</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>时间</th>
      <th>分类id</th>
      <th>作者</th>
       <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |people| %>
      <tr>
        <td><%= people.id %></td>
        <td><%= link_to people.name, admin_organization_path(people) %></td>
        <td><%= people.created_at %></td>
        <td><%= people.category_id %></td>
        <td><%= people.author %></td>
        <td>
          <%= link_to '编辑', edit_admin_organization_path(people), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_organization_path(people), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "添加", new_admin_organization_path(:category_id => 1),  :class => 'btn'%>

<%= form_for [:admin,@rule_type], :html => { :class => 'form-horizontal' } do |type| %>
  <% if @rule_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= @rule_type.errors.count %>错误，不能保存：</h2>
      <ul>
      <% @rule_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>分类</legend>

    <div class="control-group">
      <%= type.label "分类名:", :class => 'control-label' %>
      <div class="controls">
        <%= type.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= type.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_rule_types_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


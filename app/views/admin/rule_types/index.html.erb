<h1>规章制度</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @rule_types.each do |rule_type| %>
      <tr>
        <td><%= rule_type.id %></td>
        <td><%= link_to rule_type.name, admin_rule_type_rules_path(rule_type) %></td>
        <td><%= rule_type.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_rule_type_path(rule_type), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_rule_type_path(rule_type), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '添加新分类', new_admin_rule_type_path, :class => 'btn btn-primary' %>

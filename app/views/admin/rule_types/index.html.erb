<div class="page-header">
  <span class="section-title"> 规章制度 </span>
  <%= link_to '添加新分类', new_admin_section_category_path(@section), :remote => true, :class => 'btn pull-right' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @rule_types.each do |rule_type| %>
      <tr id="category_<%= rule_type.id %>">
        <td><%= link_to rule_type.name, admin_category_rules_path(rule_type) %></td>
        <td><%= rule_type.created_at.strftime('%y/%m/%d') %></td>
        <td>
          <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_section_category_path(@section, rule_type), :remote => true %>
          <%= link_to '<i class="icon-trash"></i>'.html_safe, admin_section_category_path(@section,rule_type), :method => :delete, :confirm => 'Are you sure?', :remote => true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<% if flash[:notice] %>
  <div class="alert alert-success">
      <%= flash[:notice] %>
      <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<h1>详细信息</h1>

<p>
  <b>标题</b><br>
  <%= @competition.title %>
</p>

<p>
  <b>奖项等级</b><br>
  <%= @competition.rank %>
</p>

<p>
  <b>日期 </b><br>
  <%= @competition.time %>
</p>

<p>
  <b> 指导老师</b><br>
  <%= @competition.teacher %>
</p>

<p>
  <b> 团队成员</b><br>
  <%= @competition.member %>
</p>

<p>
  <b>备注 </b><br>
  <%= @competition.remark %>
</p>

<p>
  <b> 分类 </b><br>
  <%= category_name @competition.category_id %>
</p>

<div class="form-actions">
  <%= link_to '返回', admin_category_competitions_path, :class => 'btn'  %>
  <%= link_to '编辑 ', edit_admin_category_competition_path(@competition_type,@competition), :class => 'btn' %>
  <%= link_to '删除', admin_category_competition_path(@competition_type,@competition), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

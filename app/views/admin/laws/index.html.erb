<div class="page-header">
  <span class="section-title">
    政策法规 
  </span>
<%= link_to "添加", new_admin_law_path(),  :class => 'btn btn-primary pull-right'%>
</div>

<% @categories.each do |category|%>
<h4><%= category_name category.id %></h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th>时间</th>
      <th>分类</th>
      <th>内容</th>
       <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% Law.category_posts(category.id).each do |p| %>
      <tr>
        <td><%= link_to p.title, admin_law_path(p) %></td>
        <td><%= p.created_at %></td>
        <td><%= category_name p.category_id %></td>
        <td><%= p.content %></td>
        <td>
         <%= link_to '编辑', edit_admin_law_path(p), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_law_path(p), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

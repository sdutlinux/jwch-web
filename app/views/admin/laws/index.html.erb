<h3>政策法规</h3>
<br>
<h5>山东省教育教学文件</h5>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>时间</th>
       <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @province_laws.each do |province_law| %>
      <tr>
        <td><%= province_law.id %></td>
        <td><%= link_to province_law.title, admin_law_path(province_law,:category_id => 1) %></td>
        <td><%= province_law.created_at %></td>
        <td><%= province_law.category_id %></td>
        <td>
          <%= link_to '编辑', edit_admin_law_path(province_law,:category_id => 1), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_law_path(province_law), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "添加", new_admin_law_path(:category_id => 1),  :class => 'btn btn-primary '%>
<br>
<br>


<%= form_for [:admin,@law], :html => { :class => 'form-horizontal' } do |organization| %>
  <% if @law.errors.any? %>
    <div id="error_explanation">
      <h2><%= @law.errors.count %>错误，不能保存：</h2>
      <ul>
      <% @law.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend><%= controller.action_name.capitalize %>组织机构</legend>

    <div class="control-group">
      <%= law.label "标题", :class => 'control-label' %>
      <div class="controls">
        <%= law.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= law.label "内容", :class => 'control-label' %>
      <div class="controls">
        <%= law.text_area :content,  :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
        <%= law.hidden_field :category_id, :value => "#{params[:category_id]}", :class => 'text_field' %>
    </div>

    <div class="form-actions">
      <%= law.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_laws_path, :class => 'btn' %>
    </div>
  </fieldset>

<% end %>


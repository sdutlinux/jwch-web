<%= form_for [:admin,@law], :html => { :class => 'form-horizontal' } do |law| %>

  <fieldset>
    <legend>政策法规</legend>

    <div class="control-group">
      <%= law.label "标题", :class => 'control-label' %>
      <div class="controls">
        <%= law.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= law.label "内容", :class => 'control-label' %>
      <div class="controls">
        <%= law.kindeditor :content, :width => 700,:height => 400, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
        <%= law.hidden_field :category_id, :value => "#{params[:category_id]}" %>
    </div>

    <div class="form-actions">
      <%= law.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_laws_path, :class => 'btn' %>
    </div>
  </fieldset>

<% end %>


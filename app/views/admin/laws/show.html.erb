<% if flash[:notice] %>
  <div class="alert alert-success">
      <%= flash[:notice] %>
      <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<div class="detail">
  <div class="title">
    <h3> <%= @law.title  %> </h3>
    <p> <%= Law.human_attribute_name(:created_at)%>: <%= @law.created_at.strftime('%y/%m/%d') %></p>
    <p> <%= Law.human_attribute_name(:category)%>: <%=category_name @law.category_id %></p>
  </div>
  <div class="content">
    <%=raw @law.content %>
  </div>
</div>

<div class="form-actions">
  <%= link_to '返回', admin_laws_path, :class => 'btn'  %>
  <%= link_to '编辑', edit_admin_law_path(@law,:category_id => params[:category_id]), :class => 'btn' %>
  <%= link_to '删除', admin_law_path(@law), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

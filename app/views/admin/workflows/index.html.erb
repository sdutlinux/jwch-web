<h1>工作流程</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @workflows.each do |workflow| %>
      <tr>
        <td><%= workflow.id %></td>
        <td><%= link_to workflow.title, admin_workflow_type_workflow_path(@workflow_type,workflow) %></td>
        <td><%= workflow.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_workflow_type_workflow_path(@workflow_type,workflow), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_workflow_type_workflow_path(@workflow_type,workflow), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新条目', new_admin_workflow_type_workflow_path, :class => 'btn btn-primary' %>

<%= form_for [@workflow_type,@workflow], :url => admin_workflow_type_workflow_path, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> 工作流程</legend>

    <div class="control-group">
      <%= f.label '标题', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label '内容', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :content, :cols => 40, :row => 20, :class => 'number_field' %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_workflow_type_workflows_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

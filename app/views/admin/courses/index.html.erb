<h1>课程介绍</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>发布于</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= link_to course.title, admin_course_type_course_path(@course_type,course) %></td>
        <td><%= course.created_at %></td>
        <td>
          <%= link_to '编辑', edit_admin_course_type_course_path(@course_type,course), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_course_type_course_path(@course_type,course), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新条目', new_admin_course_type_course_path, :class => 'btn btn-primary' %>

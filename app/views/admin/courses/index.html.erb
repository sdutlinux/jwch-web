<% if flash[:notice] %>
  <div class="alert alert-success">
      <%= flash[:notice] %>
      <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<h1>课程介绍</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th>学院</th>
      <th>课程编码</th>
      <th>学分</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, admin_category_course_path(@course_type,course) %></td>
        <td><%= category_name course.category_id  %></td>
        <td><%= course.number%></td>
        <td><%= course.point %></td>
        <td>
          <%= link_to '编辑', edit_admin_category_course_path(@course_type,course), :class => 'btn btn-mini' %>
          <%= link_to '删除', admin_category_course_path(@course_type,course), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新条目', new_admin_category_course_path, :class => 'btn btn-primary' %>
<p><%= will_paginate @courses,  :renderer => BootstrapPagination::Rails %></p>

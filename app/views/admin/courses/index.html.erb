<% if flash[:notice] %>
  <div class="alert alert-success">
      <%= flash[:notice] %>
      <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<div class="page-header">
  <span class="section-title"> 课程介绍 </span>
  <%= link_to '新条目', new_admin_category_course_path, :class => 'btn pull-right' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>标题</th>
      <th>学院</th>
      <th>课程编码</th>
      <th>学分</th>
      <th>动作</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, admin_category_course_path(@course_type,course) %></td>
        <td><%= category_name course.category_id  %></td>
        <td><%= course.number%></td>
        <td><%= course.point %></td>
        <td>
          <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_category_course_path(@course_type,course) %>
          <%= link_to '<i class="icon-trash"></i>'.html_safe, admin_category_course_path(@course_type,course), :method => :delete, :confirm => 'Are you sure?' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= will_paginate @courses,  :renderer => BootstrapPagination::Rails %></p>

<%= form_for [:admin,@course_type,@course], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> 课程介绍</legend>

    <div class="control-group">
      <%= f.label '标题', :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label '内容', :class => 'control-label' %>
      <div class="controls">
        <%= f.kindeditor  :introduction, :width => 700,:height => 400, :class => 'number_field' %>
      </div>
    </div>


    <div class="form-actions">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_course_type_courses_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

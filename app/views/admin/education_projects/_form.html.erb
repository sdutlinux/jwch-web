<%= form_for [:admin,@education_project], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @education_project.errors.any? %>
    <div id="error_explanation">
      <h2><%= @education_project.errors.count %>错误，不能保存：</h2>
      <ul>
      <% @education_project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %>教务通知</legend>

    <div class="control-group">
      <%= f.label "标题", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <div class="controls">
       部门:<%= f.text_field :department, :class => 'text_field' %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit '发布', :class => 'btn btn-primary' %>
      <%= link_to '取消', admin_education_projects_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

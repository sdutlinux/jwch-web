<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
    <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-error">
    <%= flash[:error] %>
    <%= button_tag 'x', :class =>"close" %>
  </div>
<% end %>
